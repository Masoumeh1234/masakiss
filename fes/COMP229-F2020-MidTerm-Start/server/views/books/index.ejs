    <!-- MAIN CONTENT -->
    <div class="container">
      <div class="row">
        <div class="col-md-offset-1 col-md-10">
          <h3>Favourite Books List </h3>
          <!-- ------------------------ -->
          <form class="form" method="POST">
            <div class="form-group">
                <label for="nameTextField">Book Title</label>
                <input type="text" class="form-control"
                id="nameTextField"
                placeholder="Enter the Book Title"
                name="name" required>
            </div>

            <div class="form-group">
                <label for="authorTextField">Author</label>
                <input type="text" class="form-control"
                id="authorTextField"
                placeholder="Enter the Book's Author"
                name="author" required>
            </div>

            <div class="form-group">
                <label for="publishedTextField">Year</label>
                <input type="text" class="form-control"
                id="publishedTextField"
                placeholder="Enter the Year of Publication"
                name="published" required>
            </div>

            <div class="form-group">
                <label for="descriptionTextArea">Description</label>
                <textarea type="text" class="form-control"
                id="descriptionTextArea"
                placeholder="Enter the a brief description of the book"
                name="description" required></textarea>
            </div>

            <div class="form-group">
                <label for="priceTextField">Price</label>
                <input type="text" class="form-control"
                id="priceTextField"
                placeholder="Enter the Book's Price"
                name="price" required>
            </div>

            <button class="btn btn-primary" type="submit">
                <i class="fas fa-edit"></i> Submit</button>
            
                <a href="/book-list" class="btn btn-warning">
                    <i class="fas fa-undo"></i> Cancel</a>

        </form>
          <!-- ------------------------ -->
          <a href="" class="btn btn-primary"><i class="fa fa-plus"></i> Add a book</a>
          <br>
          <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover">
              <thead>
                <tr>
                  <th>Title</th>
                  <th class="text-center">Price</th>
                  <th class="text-center">Author</th>
                  <th class="text-center">Genre</th>
                  <th class="text-center"></th>
                  <th class="text-center"></th>
                </tr>
                </thead>
                <tbody>
                <!-- Template Row -->
                <% for (let count = 0; count < books.length; count++) { %>
                <tr>
                  <td><%= books[count].Title %></td>
                  <td class="text-center">$<%= books[count].Price %></td>
                  <td class="text-center"><%= books[count].Author %></td>
                  <td class="text-center"><%= books[count].Genre %></td>

                  <td class="text-center">
                    <!-- ------------------------ -->
                    <form class="form" method="POST">
                      <div class="form-group">
                          <label for="nameTextField">Book Title</label>
                          <input type="text" class="form-control"
                          id="nameTextField"
                          placeholder="Enter the Book Title"
                          name="name" 
                          value="<%= book.name %>"
                          required>
                      </div>
      
                      <div class="form-group">
                          <label for="authorTextField">Author</label>
                          <input type="text" class="form-control"
                          id="authorTextField"
                          placeholder="Enter the Book's Author"
                          name="author" 
                          value="<%= book.author %>"
                          required>
                      </div>
      
                      <div class="form-group">
                          <label for="publishedTextField">Year</label>
                          <input type="text" class="form-control"
                          id="publishedTextField"
                          placeholder="Enter the Year of Publication"
                          name="published" 
                          value="<%= book.published %>"
                          required>
                      </div>
      
                      <div class="form-group">
                          <label for="descriptionTextArea">Description</label>
                          <textarea type="text" class="form-control"
                          id="descriptionTextArea"
                          placeholder="Enter the a brief description of the book"
                          name="description" 
                          required>
                          <%= book.description %>
                          </textarea>
                      </div>
      
                      <div class="form-group">
                          <label for="priceTextField">Price</label>
                          <input type="text" class="form-control"
                          id="priceTextField"
                          placeholder="Enter the Book's Price"
                          name="price" 
                          value="<%= book.price %>"
                          required>
                      </div>
      
                      <button class="btn btn-primary" type="submit">
                          <i class="fas fa-edit"></i> Submit</button>
                      
                          <a href="/book-list" class="btn btn-warning">
                              <i class="fas fa-undo"></i> Cancel</a>
      
                  </form>
                    <!-- ------------------------ -->
                  </td>

                  <td class="text-center">
                    <!-- ------------------------ -->
                    <% if(typeof displayName == 'string' && displayName) { %>
                      <a href="/book-list/add" class="btn btn-primary" role="button">
                      <i class="fas fa-plus-circle"></i> Add a Book</a>
                  <% } %>
                  <br>
                  <table class="table table-bordered table-striped table-hover">
                      <!-- Header Row-->
                      <tr class="d-flex">
                          <% if(typeof displayName == 'string' && displayName) { %>
                              <th class="text-center col-2">Title</th>
                              <th class="text-center col-2">Author</th>
                              <th class="text-center col-1">Year</th>
                              <th class="col-4">Description</th>
                              <th class="text-center col-1">Price</th>
                              <th class="text-center col-1"></th>
                              <th class="text-center col-1"></th>
                          <% } else { %>
                              <th class="text-center col-2">Title</th>
                              <th class="text-center col-2">Author</th>
                              <th class="text-center col-1">Year</th>
                              <th class="col-6">Description</th>
                              <th class="text-center col-1">Price</th>
                          <% } %>
                      </tr>
      
                      <!-- Repeatable Template Row -->
      
                      <% for(let count = 0; count < BookList.length; count++) { %>
                          <tr class="d-flex">
                              <% if(typeof displayName == 'string' && displayName) { %>
                                  <td class="text-center col-2"><%= BookList[count].name %></td>
                                  <td class="text-center col-2"><%= BookList[count].author %></td>
                                  <td class="text-center col-1"><%= BookList[count].published %></td>
                                  <td class="col-4"><%= BookList[count].description %></td>
                                  <td class="text-center col-1"><%= BookList[count].price %></td>            
                                  <td class="text-center col-1">
                                      <a href="/book-list/edit/<%= BookList[count]._id %>" class="btn btn-primary btn-sm">
                                      <i class="fas fa-pencil-alt"></i> Edit</a>
                                  </td>
                                  <td class="text-center col-1">
                                      <a href="/book-list/delete/<%= BookList[count]._id %>" class="btn btn-danger btn-sm">
                                      <i class="fas fa-trash-alt"></i> Delete</a>
                                  </td>
                               <% } else { %>
                                  <td class="text-center col-2"><%= BookList[count].name %></td>
                                  <td class="text-center col-2"><%= BookList[count].author %></td>
                                  <td class="text-center col-1"><%= BookList[count].published %></td>
                                  <td class="col-6"><%= BookList[count].description %></td>
                                  <td class="text-center col-1"><%= BookList[count].price %></td>  
                               <% } %>
                          </tr>
                      <% } %>
                  </table>
                    <!-- ------------------------ -->
                  </td>
                </tr>
                <% } %>
              </tbody>
            </table>
          </div>
           <div class="col-md-offset-1 col-md-10 text-center">
            <ul class="pagination pagination-lg pager" id="myPager"></ul>
          </div>
        </div>
      </div>
    </div>

